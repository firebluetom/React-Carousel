{
  "extends": "standard",
  "plugins": [
    "standard",
    "react"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    semi: [2, "always"],
    "react/jsx-uses-react": 2,
    "react/no-unknown-property": 2,
    "react/jsx-uses-vars": 2
  },
  "env": {
    "jest": true,
    "node": true,
    "browser": true
  }
}
